<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.awards.AwardsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="15dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardPreventCornerOverlap="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acumula viajes y redÃ­melos\n por fabulosos premios"
            android:textColor="@color/colorPrimaryText"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_50sdp"/>

        <ImageView
            android:id="@+id/img_redirect"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/ic_awards"
            android:layout_gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/linear_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llevas"
                android:textColor="#ff0000"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_awardsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIAJES"
                android:textColor="#6a4396"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>